/* pages/center/center.wxss */

.center {
  padding-bottom: 166rpx;
}

.main {
  color: rgba(255, 255, 255, 0.8);
}

.user-info {
  position: relative;
  width: 100%;
  height: calc((180 / 375) * 100vw);
}

.user-info .header-bg {
  position: absolute;
  height: 100%;
  width: 100%;
}

.mask {
  position: absolute;
  height: 100%;
  width: 100%;
  background: linear-gradient(233deg, rgba(198, 0, 135, 0.5) 0%, rgba(0, 108, 209, 0.5) 100%);
  opacity: 0.3;
  filter: blur(2px);
}

.mask::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 实时模糊 */
  backdrop-filter: blur(2px);
}

.user-wrapper {
  height: calc((116 / 375) * 100vw);
  position: absolute;
  bottom: 0;
  left: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

.detail {
  margin-left: 40rpx;
}

.username {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  font-weight: 500;
}

.phone-auth-btn {
  background: none;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #fff;
  font-size: 24rpx;
}

button::after {
  border: none;
}

.phone-auth {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 12rpx;
}

.phone-auth > text {
  font-size: 28rpx;
}

.phone-auth > image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

.item-row {
  display: flex;
  flex-direction: row;
}

.col-item {
  flex: 1;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.col-image {
  width: 96rpx;
  height: 96rpx;
}

.col-item > text {
  font-size: 28rpx;
  margin: 8rpx 0;
}

.line {
  height: 100%;
  width: 1px;
  padding-top: 90rpx;
}

.line > view {
  height: 80rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
}

.business-status {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.business-status > text {
  font-size: 24rpx;
  margin-right: 16rpx;
}

.tag-unvisible {
  visibility: hidden;
}

/* cell 单元格扩展样式 */
.cell-extra {
  padding: 24rpx 30rpx !important;
}
