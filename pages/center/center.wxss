/* pages/center/center.wxss */

.center {
  padding-bottom: 166rpx;
}

.main {
  color: rgba(255, 255, 255, 0.8);
}

.user-info {
  position: relative;
  width: 100%;
  height: calc((180 / 375) * 100vw);
}

.user-info .header-bg {
  position: absolute;
  height: 100%;
  width: 100%;
}

.mask {
  position: absolute;
  height: 100%;
  width: 100%;
  background: linear-gradient(233deg, rgba(198, 0, 135, 0.5) 0%, rgba(0, 108, 209, 0.5) 100%);
  opacity: 0.3;
  filter: blur(2px);
}

.mask::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 实时模糊 */
  backdrop-filter: blur(2px);
}

.user-wrapper {
  height: calc((116 / 375) * 100vw);
  position: absolute;
  bottom: 0;
  left: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

.detail {
  margin-left: 40rpx;
}

.username {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  font-weight: 500;
}

.phone-auth-btn {
  background: none;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #fff;
  font-size: 24rpx;
}

button::after {
  border: none;
}

.phone-auth {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 12rpx;
}

.phone-auth > text {
  font-size: 28rpx;
}

.phone-auth > image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

.item-row {
  display: flex;
  flex-direction: row;
}

.col-item {
  flex: 1;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.col-image {
  width: 96rpx;
  height: 96rpx;
}

.col-item > text {
  font-size: 28rpx;
  margin: 8rpx 0;
}

.line {
  height: 100%;
  width: 1px;
  padding-top: 90rpx;
}

.line > view {
  height: 80rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
}

.business-status {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.business-status > text {
  font-size: 24rpx;
  margin-right: 16rpx;
}

.tag-unvisible {
  visibility: hidden;
}

/* cell 单元格扩展样式 */
.cell-extra {
  padding: 24rpx 30rpx !important;
}
.item-block{
  padding: 0 30rpx;
}
.account-block {
  width: 100%;
  height: 240rpx;
  background:rgba(255,255,255,0.05);
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.account-block__top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.account-block__top__balance {
  font-size:24rpx;
  color:rgba(255,255,255,0.5);
  line-height:34rpx;
  height: 34rpx;
}
.account-block__top__right{
  display: flex;
  align-items: center;
}
.account-block__top__more{
  height:34rpx;
  font-size:24rpx;
  color:rgba(255,255,255,0.8);
  line-height:34rpx;
}
.account-block__top__right .arrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 14rpx;
}
.account-block__amount {
  height:56rpx;
  font-size:40rpx;
  font-weight:500;
  color:rgba(255,255,255,0.8);
  line-height:56rpx;
  margin-top: 10rpx;
}
.account-block__bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}
.account-block__bottom__left{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.account-block__bottom__left__total{
  font-size:24rpx;
  color:rgba(255,255,255,0.5);
  margin-right: 20rpx;
}
.account-block__bottom__left__amount {
  font-size:30rpx;
  color:rgba(255,255,255,0.8);
}
.account-block__bottom__btn{
  width:180rpx;
  text-align: center;
  height:60rpx;
  line-height:60rpx;
  font-size: 24rpx;
  background:rgba(69,80,138,0.62);
  border-radius:30rpx;
  position: relative;
}
.btn-bg{
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  bottom: -2rpx;
  right: -2rpx;
  border-radius:30rpx;
  background: linear-gradient(225deg, rgba(255, 64, 167, 1) 0%, rgba(210, 51, 255, 1) 45%, rgba(45, 147, 255, 1) 100%);
  z-index: 1
}
.btn{
  position: absolute;
  border-radius: 30rpx;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
  background: #45508A;
}