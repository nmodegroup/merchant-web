/* pages/info/info.wxss */
.info-page {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

.shop-logo {
  width: 60rpx;
  height: 60rpx;
}

.input-view {
  margin-right: 60rpx;
  margin-left: 60rpx;
}

.btn-commit {
  height: 88rpx;
  line-height: 88rpx;
  margin: 60rpx 50rpx;
  border-radius: 44rpx;
  background: rgba(69, 80, 138, 1);
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
}

.enable {
  position: relative;
  color: #fff;
}

.enable::after {
  position: absolute;
  content: '';
  top: -2rpx;
  left: -2rpx;
  bottom: -2rpx;
  right: -2rpx;
  border-radius: 44rpx;
  z-index: -1;
  background: linear-gradient(225deg, rgba(255, 64, 167, 1) 0%, rgba(210, 51, 255, 1) 45%, rgba(45, 147, 255, 1) 100%);
}

.disable {
  background: rgba(69, 80, 138, 0.62);
  border: 1px solid rgba(112, 116, 152, 1);
}

.skip {
  width: 100rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin: 0 auto;
  text-align: center;
}

.active {
  color: #fff;
}

.commit-wrapper {
  position: relative;
}

.btn-auth-phone {
  position: absolute;
  height: 88rpx;
  line-height: 88rpx;
  top: 0;
  left: 50rpx;
  right: 50rpx;
  border-radius: 44rpx;
  opacity: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
}

/* cover */

.cover-container,
.bartender-container {
  padding: 30rpx 0 40rpx 30rpx;
}

.title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.scroll-container {
  box-sizing: border-box;
}

.scroll-item-wrapper {
  display: flex;
  flex-direction: row;
}

.item {
  margin-right: 20rpx;
}

/* ç©º cover */
.cover-empty,
.bartender-empty {
  width: 88vw;
  height: 50vw;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.cover-empty > image {
  height: 148rpx;
  width: 148rpx;
}

.cover-empty > view {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 30rpx;
}

.image-container {
  width: 88vw;
  height: 50vw;
  position: relative;
}

.cover-image,
.bartender-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.cover-edit,
.bartender-edit {
  width: 148rpx;
  height: 148rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.cover-delete {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 6rpx;
  right: 4rpx;
}

/* cover */

.bartender-panel,
.story-panel {
  height: 76rpx;
  line-height: 76rpx;
  background-color: #0a0a29;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  padding-left: 30rpx;
}

.bartender-item-wrapper {
  display: flex;
  flex-direction: row;
}

.bartender-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 20rpx;
}

.bartender-delete {
  width: 40rpx;
  height: 40rpx;
  margin-top: 40rpx;
}

.area-placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
}

.bartender-textarea {
  width: 88vw;
  min-height: 30vw;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  padding: 34rpx 20rpx 0 20rpx;
  position: relative;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 1);
}

.input-count {
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.bartender-empty > image {
  height: 148rpx;
  width: 148rpx;
}

.bartender-empty > view {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 30rpx;
}

.story-textarea {
  width: calc(100vw - 60rpx);
  margin: 0 auto;
  min-height: 77vw;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  padding: 34rpx 20rpx 0 20rpx;
  position: relative;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 1);
}
