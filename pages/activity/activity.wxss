/* pages/activity/activity.wxss */
.main-container {
  padding-bottom: 166rpx;
}

.activity-page {
  padding: 30rpx;
}

.create-activity {
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: calc((94 / 375) * 100vw);
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

.create-activity::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  /* 实时模糊 */
  backdrop-filter: blur(10px);
}

.create-activity > image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
}

.create-activity > text {
  font-size: 24rpx;
  color: #fff;
}

.item-layout {
  border-radius: 8rpx;
}

.activity-item {
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  margin-top: 30rpx;
  position: relative;
  box-sizing: border-box;
  z-index: 1;
}

.activity-item::after {
  content: '';
  position: absolute;
  z-index: -1;
  border-radius: 8rpx;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(10px);
}

.banner-wrapper {
  position: relative;
}

.banner-wrapper > image {
  width: 100%;
  height: calc((160 / 345) * 92vw);
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.banner-wrapper > view {
  font-size: 22rpx;
  color: #fff;
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  /* text-shadow: 5px 5px 15px #000, -5px 5px 35px #000, 5px -5px 35px #000, -5px -5px 35px #000; */
  text-shadow: black 0.1em 0.1em 0.2em;
}

.activity-info {
  padding: 24rpx 20rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.name-location {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.activity-name {
  flex: 1;
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-right: 40rpx;
}

.activity-location {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.activity-location > image {
  width: 18rpx;
  height: 22rpx;
}

.activity-location > text {
  font-size: 24rpx;
  color: #fff;
  margin-left: 12rpx;
}

.activity-reserve {
  padding: 24rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: row;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 24rpx;
}

.left {
  flex: 1;
}

.reserve-detail {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.go-detail {
  font-size: 22rpx;
  color: #62d5ff;
  text-decoration: underline;
  margin-left: 10rpx;
}

.right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.reserve-status {
  font-size: 20rpx;
}
