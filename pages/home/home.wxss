/* pages/home/home.wxss */
.home-page {
  padding-bottom: 166rpx;
  min-height: 100%;
  /* background: rgba(21, 21, 62, 1); */
  z-index: 1;
  position: relative;
}

.home-page::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 实时模糊 */
  backdrop-filter: blur(10px);
}

.arrival-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-left: 30rpx;
  margin-top: 30rpx;
}
