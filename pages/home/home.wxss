/* pages/home/home.wxss */
page {
  background: #15153e;
}

.tab-container {
  height: 80rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  position: relative;
}

.tab:after {
  content: '';
  position: absolute;
  width: 1rpx;
  height: 30rpx;
  border-right: 1rpx solid rgba(255, 255, 255, 0.1);
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.tab:last-child {
  border-right: none;
}

.tab-checked {
  color: #fff;
  font-weight: 500;
}
