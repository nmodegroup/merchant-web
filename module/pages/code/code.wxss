/* module/pages/code/code.wxss */

.image-container {
  margin: 0 auto;
  margin-top: 20rpx;
  position: relative;
  width: calc((345 / 375) * 100vw);
  height: calc((452 / 375) * 100vw);
}

.image-container .code-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.image-container .code-image {
  width: 40vw;
  height: 40vw;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%);
}

.canvas {
  width: 100%;
  height: calc((452 / 345) * 100vw);
  position: fixed;
  top: 9999rpx;
  left: 0;
}
