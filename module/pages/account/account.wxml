<!--module/pages/account/account.wxml-->
<wxs src="../../../wxs/activity.wxs" module="activityModule" />
<view class="page"> 
  <nav-bar title="账单" back></nav-bar>
  <view class="account-block">
   <view class="account-block__nav">
    <nav-sub
     list="{{ subNav }}"
     selectIndex="{{ selectIndex }}"
     bindonSubItem="onSubItem"
    />
    </view>
    <view class="account-block__content">
      <view class="account-item" wx:for="{{ list }}" wx:key="{{ index}}" >
        <cell-group
          titleLeft="{{ item.scene }}"
          titleRight="{{ activityModule.showTextPrice(item.money, queryType) }}"
          twoTipsLeft="{{ item.desc }}"
          threeTipsLeft="{{ '订单号：' + item.orderNo }}"
          threeTipsRight="{{ item.createTime }}"
        />
      </view>
      <!-- <view class="account-item">
        <cell-group/>
      </view> -->
      <!-- 加载状态 -->
      <loading-more 
       isShowLoadingMore="{{ isShowLoadingMore }}"
       showNomore="{{ showNomore }}"
       moreTips="没有更多了~" 
      />
    </view>
  </view>
  <!-- toast -->
  <toast id="toast"></toast>
  <!-- 定位弹窗 -->
  <modal id="modal"></modal>
</view>
