/* module/pages/shop-code/index.wxss */
.shop-page {
  width: 100%;
  height: 100%;
}
.shop-block {
  width: 620rpx;
  height: 1026rpx;
  background:rgba(0,0,0,0.34);
  opacity:0.8;
  margin: 30rpx auto 0;
  overflow: hidden;
  position: relative;
}
.shop-block__upload {
  width: 316rpx;
  height: 316rpx;
  text-align: center;
  margin: 256rpx auto 0;
  overflow: hidden;
}
.shop-block__upload .upload-icon {
  width: 148rpx;
  height: 148rpx;
  margin-top: 80rpx;
}
.shop-block__upload__tips {
  color:rgba(255,255,255,0.8);
  font-size: 26rpx;
  line-height: 44rpx;
  margin-top: 20rpx;
}
.upload-rule {
  width:564rpx;
  height:264rpx;
  border-radius:12rpx;
  border:2rpx solid rgba(255,255,255,0.1);
  margin: 160rpx auto 0;
  padding: 22rpx 40rpx;
  box-sizing: border-box;
}
.upload-rule__label {
  font-size: 24rpx;
  color:rgba(255,255,255,0.5);
  line-height: 45rpx;
}
.replace-bg,.replace-bg__label  {
  width: 196rpx;
  height: 68rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.replace-bg .replace-bg__image {
  width: 100%;
  height: 100%;
}
.replace-bg .replace-bg__label {
  font-size: 26rpx;
  color: #fff;
  line-height: 68rpx;
  text-align: center;
}
.draw-btn{
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.code-bg {
  width: 100%;
  height: 100%;
}