/* components/action/index.wxss */
@import '../../app.wxss';
.action-wrapper {
  position: fixed;
  min-height: 98rpx;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(10, 10, 41, 0.7);
  display: flex;
  flex-direction: row;
}

.action-wrapper::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 实时模糊 */
  backdrop-filter: blur(3px);
}
