.nav-block {
  width: 100%;
  height: 80rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
}
.nav-block__cell {
  flex: 1;
  color: rgba(255, 255, 255, 0.5);
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.nav-block__cell.active{
  color: rgba(255, 255, 255, 0.8);
}
.nav-block__cell::after{
  content: "";
  position: absolute;
  right: -1rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 30rpx;
  background-color: rgba(255, 255, 255, 0.1);
}
.nav-block__cell:last-child::after{
 width: 0;
}