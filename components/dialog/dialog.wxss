
.dialog-block__content {
  position: fixed;
  top: 50%;
  left: 50%;
  overflow: hidden;
  transition: .3s;
  transform: translate3d(-50%,-50%,0);
  backface-visibility: hidden;
  z-index: 2002;
}
.close {
  width: 66rpx;
  height: 66rpx;
  margin: 25px auto 0;
}
.mask-layer{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.7);
    z-index: 2001;
}