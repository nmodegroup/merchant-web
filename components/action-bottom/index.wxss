/* components/action-buttom/index.wxss */
.action-container {
  background: rgba(115, 127, 194, 0.29);
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 30rpx;
  color: rgb(255, 255, 255);
}

.action-container::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 实时模糊 */
  backdrop-filter: blur(3px);
}

.btn-common {
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  flex: 1;
}

.left-btn {
  margin-right: 20rpx;
  background: linear-gradient(225deg, rgba(255, 64, 167, 1) 0%, rgba(210, 51, 255, 1) 45%, rgba(45, 147, 255, 1) 100%);
  border-radius: 44rpx;
}

.right-btn {
  height: 72rpx;
  line-height: 72rpx;
  position: relative;
}

.enable {
  color: #fff;
  background: #45508a;
  position: absolute;
  border-radius: 44rpx;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
}

.enable-bg {
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  bottom: -2rpx;
  right: -2rpx;
  border-radius: 44rpx;
  background: linear-gradient(225deg, rgba(255, 64, 167, 1) 0%, rgba(210, 51, 255, 1) 45%, rgba(45, 147, 255, 1) 100%);
  z-index: 1;
}

.disable {
  background: rgba(69, 80, 138, 0.62);
  border: 1px solid rgba(112, 116, 152, 1);
  color: #9fa4c3;
  border-radius: 44rpx;
}
