/* components/cell/index.wxss */
.cell-container {
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-border {
  position: relative;
}

.cell-border::after {
  content: '';
  position: absolute;
  left: 80rpx;
  bottom: 0;
  right: 0;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.cell-border-two {
  position: relative;
}

.cell-border-two::after {
  content: '';
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 0;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.right-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.title {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.arrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 14rpx;
}
