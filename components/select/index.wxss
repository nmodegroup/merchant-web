/* components/select/index.wxss */
.select_box {
  width: 140rpx;
  position: relative;
}
.select {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border-radius: 4rpx;
  padding: 0 20rpx;
  background: rgba(248, 248, 248, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.select_text {
  font-size: 26rpx;
  flex: 1;
}
.select_img {
  width: 12rpx;
  height: 18rpx;
  display: block;
  transition: transform 0.3s;
}
.select_img_rotate {
  transform: rotate(180deg);
}
.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 4rpx;
  height: 300rpx;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  border: 1rpx solid #eee;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 26rpx;
  padding: 10rpx;
  color: rgba(0, 0, 0, 0.5);
  position: relative;
  text-align: center;
}

.option::after {
  content: '';
  position: absolute;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.2);
  left: 20rpx;
  right: 20rpx;
  bottom: 0;
  transform: scaleY(0.5) scaleX(0.8);
}
