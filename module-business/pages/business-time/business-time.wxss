/* module/pages/business-time/business-time.wxss */
page {
  padding-bottom: 98rpx;
}

.business-page {
  font-size: 30rpx;
  color: #fff;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.action-item > image {
  width: 30rpx;
  height: 30rpx;
}

.action-item > text {
  margin-left: 10rpx;
}

/* cell 单元格扩展样式 */
.cell-extra {
  padding: 24rpx 30rpx !important;
}

.icon-special {
  width: 74rpx;
  height: 74rpx;
}

.setting-special-time {
  padding: 4rpx 20rpx 4rpx 45rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 22rpx;
  margin-top: 80rpx;
  display: inline-block;
  margin-left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  position: relative;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.setting-special-time:before {
  content: '+';
  position: absolute;
  left: 20rpx;
  top: 7rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  line-height: 1;
}
