/* module/pages/arrival-time/arrival-time.wxss */

.arrival-page {
  font-size: 30rpx;
  color: #fff;
  padding-bottom: 166rpx;
}

.desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
  line-height: 42rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.desc .detail {
  display: inline-block;
  text-align: left;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.action-item > image {
  width: 30rpx;
  height: 30rpx;
}

.action-item > text {
  margin-left: 10rpx;
}

/* cell 单元格扩展样式 */
.cell-extra {
  padding: 20rpx 30rpx !important;
}

.select-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.split {
  width: 60rpx;
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.8);
  font-size: 26rpx;
}

/* 左滑时按钮样式 */
.right-action {
  height: 100%;
  width: 134px;
  display: flex;
  flex-direction: row;
}

.common {
  height: 100%;
  width: 134rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.edit {
  background-color: rgba(69, 106, 236, 0.8);
}

.delete {
  background-color: rgba(238, 10, 36, 0.8);
}

.common > image {
  width: 26rpx;
  height: 26rpx;
  margin-bottom: 8rpx;
}
