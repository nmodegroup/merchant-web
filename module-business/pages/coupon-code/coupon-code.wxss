/* module-business/pages/coupon-code/coupon-code.wxss */
.page{
  width: 100%;
  height: 100%;
}
.coupon-code {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 100rpx;
}
.activity-block{
  padding-top: 60rpx;
}
.activity-block__name {
  height:56rpx;
  font-size:40rpx;
  color:rgba(255,255,255,1);
  line-height:56rpx;
}
.activity-block__tips {
  height:36rpx;
  font-size:26rpx;
  color:rgba(255,255,255,0.5);
  line-height:36rpx;
  margin-top: 10rpx;
}
.code-block {
  margin-top: 50rpx;
  width: 100%;
  background:rgba(0,0,0,0.5);
  border-radius:8rpx;
  padding: 10rpx 40rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}
.code-block::after{
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(3rpx);
}
.code-block__all {
  overflow: hidden;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}
.cell-block__item{
  display: flex;
  align-items: center;
  height: 50rpx;
  margin-top: 30rpx;
}
.cell-block__item__image {
  width: 30rpx;
  height: 30rpx;
}
.cell-block__item__text {
  height:42rpx;
  font-size:30rpx;
  color:rgba(255,255,255,0.8);
  line-height:42rpx;
  margin-left: 10rpx;
}
.cell-block__item__text.over-text{
  text-decoration: line-through;
  color:rgba(255,255,255,0.5);
}