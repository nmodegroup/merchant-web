/* module-business/pages/activity-edit/activity-edit.wxss */

.activity-content {
  color: rgba(255, 255, 255, 0.5);
  font-size: 26rpx;
  padding-bottom: 166rpx;
}

.panel {
  height: 76rpx;
  line-height: 76rpx;
  background-color: #0a0a29;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  padding-left: 30rpx;
}

.active {
  color: #fff;
}

.input-view {
  margin-right: 60rpx;
  margin-left: 60rpx;
}

/* 限制预订数量 */
.reserve-count {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 30rpx 60rpx 0 30rpx;
  position: relative;
}

.reserve-count::after {
  content: '';
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 30rpx;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.reserve-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  flex: 1;
}

.radio-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  justify-content: flex-end;
}

.radio-item > view {
  margin-right: 10rpx;
}

.quota-input {
  width: 100rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
  text-align: center;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  /* padding-bottom: 6rpx; */
}

.placeholder-quota {
  color: rgba(255, 255, 255, 0.5);
}

.activity-image-container {
  padding: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

.banner-empty-class {
  width: 100% !important;
  height: calc(100vw * (160 / 375)) !important;
  margin-top: 20rpx;
}

.banner {
  width: 100%;
  height: calc(100vw * (160 / 375));
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.post-empty-class {
  width: 100% !important;
  height: calc(100vw * (600 / 375)) !important;
  margin-top: 30rpx;
}

.poster {
  width: 100%;
  height: calc(100vw * (600 / 375));
  border-radius: 8rpx;
  margin-top: 30rpx;
}

.address {
  text-align: right;
  width: 60vw;
  word-wrap: break-word;
  word-break: normal;
}

/* radio 样式 */

.radio-custom-icon {
  width: 30rpx;
  height: 30rpx;
}

.van-radio {
  width: 30rpx !important;
  height: 30rpx !important;
}

.van-radio__icon-wrap,
.van-radio__label {
  line-height: 30rpx !important;
}
