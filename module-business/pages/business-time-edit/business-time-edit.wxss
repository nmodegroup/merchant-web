/* module/pages/business-time-edit/busine.wxss */
.business-edit-page {
  padding-bottom: 166rpx;
}

.week {
  font-size: 28rpx;
  color: #fff;
}

.disactive {
  color: rgba(255, 255, 255, 0.5);
}

/* picker */

.time-picker-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 36rpx 0;
  align-items: center;
}

.time-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-left: 4vw;
}

.van-picker {
  width: 30vw;
  background-color: #15153e !important;
  border-radius: 0 !important;
}

.van-picker__frame::after {
  content: '';
  width: 30vw !important;
  height: 1rpx !important;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.5) rgba(255, 255, 255, 0.5), rgba(0, 0, 0, 0.5)) !important;
  position: absolute;
  top: 0 !important;
  left: 0 !important;
  transform: scale(1) !important;
  border: none !important;
}
.van-picker__frame::before {
  content: '';
  width: 30vw;
  height: 1rpx;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.5), rgba(255, 255, 255, 0.5), rgba(0, 0, 0, 0.5));
  position: absolute;
  top: 30px;
  left: 0;
}
