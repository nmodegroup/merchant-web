/* module-business/pages/activity-cancel/activity-cancel.wxss */
.main-block {
  padding: 30rpx;
}
.operate-block {
  text-align: center;
  width:100%;
  height:240rpx;
  background:rgba(255,255,255,0.05);
  border-radius:8rpx;
  overflow: hidden;
}
.cancel-icon {
  width: 44rpx;
  height: 44rpx;
  margin-top: 48rpx;
}
.operate-block__title {
  height:42rpx;
  line-height:42rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin-top: 10rpx;
}
.operate-block__tips{
  height:34rpx;
  line-height:34rpx;
  font-size:24rpx;
  color:rgba(255,255,255,0.5);
  margin-top: 10rpx;
}
.item-block{
  margin-top: 40rpx;
}
.item-block__item {
  margin-bottom: 20rpx;
}
.item-block__title{
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 30rpx; 
}
.item-block__title__tip{
  height:42rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,0.8);
  line-height: 42rpx;
}
.item-block__title__arrow{
  width: 25rpx;
  height: 25rpx;
}