.tab-container {
  height: 80rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  position: relative;
}

.tab:after {
  content: '';
  position: absolute;
  width: 1rpx;
  height: 30rpx;
  border-right: 1rpx solid rgba(255, 255, 255, 0.1);
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.tab:last-child {
  border-right: none;
}

.reserve-container {
  height: 88rpx;
  flex-direction: row;
  position: relative;
  display: flex;
}

.reserve-container::after {
  position: absolute;
  content: '';
  height: 1rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.common {
  width: calc((1 / 3) * 100vw);
  line-height: 88rpx;
  height: 88rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.nickname {
  padding: 0 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.reserve-container .phone {
  color: #62d5ff;
  text-decoration: underline;
  flex-shrink: 0;
}

.time {
  flex-shrink: 0;
}
