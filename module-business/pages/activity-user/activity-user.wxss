/* module-business/pages/activity-user/activity-user.wxss */

.reserve-container {
  background-color: rgba(255, 255, 255, 0.05);
  flex-direction: column;
  display: flex;
  padding: 20rpx 30rpx;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 8rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.top {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.bottom {
  display: flex;
  flex-direction: row;
}

.nickname {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-right: 30rpx;
}

.phone {
  color: #62d5ff;
  text-decoration: underline;
}

.appoint-time {
  flex: 1;
}

.table-name-num {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
